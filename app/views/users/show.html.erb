
<%= render 'shared/setup', book: @book, user: current_user %>

<div class="col-md-8 offset-md-1">
 <h2>Books</h2>
 <table class="table table-hover table-inverse">
  <thead>
   <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
   <tr>
    <th><%= image_tag current_user.get_profile_image(100,100) %></th>
    <th><%= book.title %></th>
    <th><%= book.body %></th>
   </tr>
  </tbody>
  <% end %>
 </table>
</div>

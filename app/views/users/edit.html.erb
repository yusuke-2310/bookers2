 <div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
   <div class="form-group">
    <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
    <ul>
     <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
    </ul>
    <% end %>
   </div>
   <%= form_with model: @user do |f| %>
    <div class="form-group">
    <label for="user_name">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"Name"%>
    </div>
    <div class="form-group">
    <span>Image</span><br>
    <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
    </div>
    <div class="form-group">
    <%= f.text_area :introduction, autofocus: true, id:"user_introduction", placeholder:"Introduction" %>
    </div>
    <div class="form-group">
    <%= f.submit "Update User" %>
    </div>
   <% end %>
  </div>
 </div>
</div>

<%= render 'setup', books: @books %>

<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
  <table class= "table table-hover table-inverse">
    <tbody>
     <tr> 
      <td><%= image_tag @book.get_image %><br><%= @book.user.name %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><button type="button" class="btn btn-success" href="#" class="link-success"><%= link_to "edit", edit_book_path(@book.id) %></button></td>
      <td><button type="button" class="btn btn-success" href="#" class="link-success">
      <% if @book.user == current_user %>
       <%= link_to "destroy", book_path(@book), method: :delete %>
      <% end %> 
      </button></td>
     </tr> 
    </tbody>
   </table>
  </div> 
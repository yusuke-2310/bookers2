
<%= render 'shared/setup', book: @book, user: @user %>

<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
  <table class= "table table-hover table-inverse">
    <tbody>
     <tr>
      <td>
       <%= link_to image_tag(@user.get_profile_image(100,100)), user_path(@book.user.id) %><br>
       <%= link_to @book.user.name, user_path(@user.id) %>
      <td>
      <td><%= link_to @book.title, book_path %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user == current_user %>
      <button type="button" class="btn btn-success" href="#" class="link-success">
      <%= link_to "Edit", edit_book_path(@book) %>
      <% end %>
      </button></td>
      <td><% if @book.user == current_user %>
       <button type="button" class="btn btn-success" href="#" class="link-success">
       <%= link_to "Destroy", book_path(@book), method: :delete %>
      <% end %>
      </button></td>
     </tr>
    </tbody>
   </table>
  </div>
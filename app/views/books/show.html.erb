
<%= render 'shared/setup', book: @book, user: current_user %>

<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
  <table class= "table table-hover table-inverse">
    <tbody>
     <tr> 
      <td><%= image_tag current_user.get_profile_image(100,100) %><br><%= link_to @book.user.name %></td>
      <td><%= link_to @book.title %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user == current_user %>
      <button type="button" class="btn btn-success" href="#" class="link-success">
      <%= link_to "edit", edit_book_path(@book.id) %>
      <% end %>
      </button></td>
      <td><% if @book.user == current_user %>
       <button type="button" class="btn btn-success" href="#" class="link-success">
       <%= link_to "destroy", book_path(@book), method: :delete %>
      <% end %> 
      </button></td>
     </tr> 
    </tbody>
   </table>
  </div> 
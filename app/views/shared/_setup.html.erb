<div class= "container px-5 px-sm-0">
 <div class= "row">
  <div class= "col-md-3">
   <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>
   <table class= "table">
    <tbody>
     <tr>
      <th>name</th>
      <th><%= user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
     </tr>
    </tbody>
   </table>
   
   <%= link_to edit_user_path(user.id) do %>
    <div class="btn btn-outline-secondary btn-block">
     <span class=" fas fa-user-cog"></span> 
    </div>
   <% end %>
   <h2 class= "mt-3">New book</h2>
   <%= form_with model: Book.new, autocomplete: 'off' do |f| %>
   <div class="form-group">
    <label>title</lable><br>
    <%= f.text_field :title %>
   </div>
   <div class="form-group">
    <label>opinion</label><br>
    <%= f.text_area :body %>
   </div>
   <div class="form-group">
    <%= f.submit "Create Book" %>
   </div>
  <% end %>
  </div>

